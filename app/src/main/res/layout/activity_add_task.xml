<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tefah.neverforget.AddTaskActivity">

    <EditText
        android:id="@+id/writtenNote"
        android:layout_width="0dp"
        android:layout_height="160dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/xxmargin"
        tools:text="the written note if there is any"
        android:hint="put your note here take it to @strings" />
    <ImageView
        android:id="@+id/imageNote"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/writtenNote"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@android:drawable/ic_menu_report_image"/>
    <LinearLayout
        android:id="@+id/player"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageNote"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#f1f1f1">
        <ImageButton
            android:id="@+id/voiceNotePlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_play"/>

    </LinearLayout>
    <Button
        android:id="@+id/done"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/player"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="ADD"
        android:background="@color/colorPrimaryDark"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/voiceNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_btn_speak_now"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:elevation="@dimen/restFABelevation" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/photoNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:elevation="@dimen/restFABelevation"
        android:src="@android:drawable/ic_menu_camera"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/writeNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:elevation="@dimen/restFABelevation"
        android:src="@android:drawable/ic_menu_edit"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/photoNote"
        app:layout_constraintRight_toLeftOf="@+id/voiceNote"
        />
</android.support.constraint.ConstraintLayout>
