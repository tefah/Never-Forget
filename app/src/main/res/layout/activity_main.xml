<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tefah.neverforget.MainActivity">

    <android.support.v7.app.AlertController.RecycleListView
        android:id="@+id/tasksList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

    </android.support.v7.app.AlertController.RecycleListView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/voiceNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_btn_speak_now"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:elevation="@dimen/restFABelevation" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/photoNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:elevation="@dimen/restFABelevation"
        android:src="@android:drawable/ic_menu_camera"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
         />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/writtenNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:elevation="@dimen/restFABelevation"
        android:src="@android:drawable/ic_menu_edit"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/photoNote"
        app:layout_constraintRight_toLeftOf="@id/voiceNote"
        />


</android.support.constraint.ConstraintLayout>
